            <list>
                <ref bean="employee1" />
                <ref bean="employee2" />
                <ref bean="employee3" />
                <ref bean="employee4" />
            </list>
        </property>
        <property name="project">
            <list>
                <ref bean="project1" />
                <ref bean="project2" />
                <ref bean="project3" />
            </list>
        </property>
    </bean>

    <bean id="project1" class="com.spiringcore.sapphireassignment.Project">
        <property name="projectId" value="1" />
        <property name="projectName" value="Usindh" />
        <property name="employee">
            <list>
                <ref bean="employee1" />
                <ref bean="employee2" />
                <ref bean="employee3" />
                <ref bean="employee4" />
            </list>
        </property>
    </bean>

    <bean id="project2" class="com.spiringcore.sapphireassignment.Project">
        <property name="projectId" value="2" />
        <property name="projectName" value="Library" />
        <property name="employee">
            <list>
                <ref bean="employee1" />
                <ref bean="employee2" />
                <ref bean="employee3" />
                <ref bean="employee4" />
            </list>
        </property>
    </bean>

    <bean id="project3" class="com.spiringcore.sapphireassignment.Project">
        <property name="projectId" value="3" />
        <property name="projectName" value="Admission" />
        <property name="employee">
            <list>
                <ref bean="employee2" />
                <ref bean="employee3" />
                <ref bean="employee4" />
            </list>
        </property>
    </bean>

    <bean id="employee5" class="com.spiringcore.sapphireassignment.Employee">
        <constructor-arg value="1"/>
        <constructor-arg value="AHSAN"/>
    </bean>
</beans>